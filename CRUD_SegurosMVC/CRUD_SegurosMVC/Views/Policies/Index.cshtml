@model IEnumerable<CRUD_SegurosMVC.Models.Policy>

@{
    ViewData["Title"] = "Pólizas de Seguro";
}

<h1 class="text-center mb-4">Pólizas de Seguro</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Agregar Nueva Póliza</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Número de Póliza</th>
            <th scope="col">Cliente</th>
            <th scope="col">Monto Asegurado</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.PolicyNumber</td>
                <td>@item.CustomerName</td>
                <td>@item.PremiumAmount.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
